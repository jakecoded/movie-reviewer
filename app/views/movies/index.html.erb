<div class="container">
  <p id="notice"><%= notice %></p>

<div style="text-align: right;"><span class="glyphicon glyphicon-search" aria-hidden="true" style="  font-size: 24px; top: 10px"></span><%= form_tag("/search", method: "get", :class => 'form-inline', :style => 'display: inline-block; margin-left: 10px;') do text_field_tag :search_movie, nil, class: 'form-control', placeholder: 'Search movies, movie directors...', style: 'width: 325px;' end %>
</div>
<br>
<div class="row">
<% @movies.each do |movie| %>

  <div class="col-sm-6 col-md-2">
    <div class="thumbnail">
      <%= image_tag movie.image.url(:cover_small) %>
      <div class="caption">
        <p><strong><%= truncate(movie.title, :length => 30) %></strong></p>
        <p><%= link_to 'VIEW', movie, :class => "btn btn-default btn-block", :role => "button", :style => "color: #000" %></p>
        <% if current_user %>
        <p><%= link_to 'EDIT', edit_movie_path(movie), :class => "btn btn-primary btn-block", :role => "button", :style => "color: #FFF" %></p>
        <p><%= link_to 'DELETE', movie, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-block", :role => "button", :style => "color: #FFF" %></p>
        <% end %>
        <p><span class="label label-primary"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= pluralize(movie.reviews.count, "comment") %></span></p>
      </div>
    </div>
  </div>
      <% end %>
</div>

</div>


