<!DOCTYPE html>
<html>
<head>
  <title>MovieReviewer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar navbar-inverse" role="navigation" style="border-radius: 0">
    <div class="navbar-inner">
        <div class="container">
            
            <div id="logo" class="navbar-brand"> <%=link_to "Movie Reviewer", root_path %></div>

            <% if user_signed_in? %>

                <ul class="nav navbar-nav navbar-right">
                    <%= link_to 'Create Review', new_movie_path, :class => "btn btn-success navbar-btn btn-xs", :role => "button", :style => "color: #FFF; font-weight: bold; font-size: 12px" if current_user %>
                    <li><a>Hello, <%= current_user.username %>! </a></li>
                    <li><%= link_to "Account", edit_user_registration_path %></li>
                    <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
                </ul>
            <% else %>
                <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "Sign up", new_user_registration_path %></li>
                    <li><%= link_to "Sign in", new_user_session_path %></li>
                </ul>
            <% end %>
        </div>
    </div>
</header>
<% flash.each do |name, msg| %>
	<%= content_tag(:div, msg, class: "alert alert-info") %>
<% end %>
<%= yield %>

</body>
</html>
